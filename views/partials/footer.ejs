<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Footer</title>
    <style>
        /* Footer Styles */
        .footer {
            background: #f8f9fa;
            color: #333;
            transition: background 0.3s ease, color 0.3s ease;
        }
        [data-theme="dark"] .footer {
            background: #1f1f1f;
            color: #fff;
        }

        /* Scroll to Top Button */
        #scrollToTop {
            display: none;
            position: fixed;
            margin: 5px;
            bottom: 100px;
            right: 20px; /* Moved slightly left for better toggle btn visibility */
            background: #007bff;
            color: white;
            border: none;
            padding: 8px;
            font-size: 18px;
            cursor: pointer;
            transition: opacity 0.3s;
        }
        #scrollToTop:hover {
            background: #0056b3;
        }
        [data-theme="dark"] #scrollToTop {
            background: #ffcc00;
            color: black;
        }
        [data-theme="dark"] #scrollToTop:hover {
            background: #e6b800;
        }
    </style>
</head>
<body>
    <footer class="text-center py-3 border-top footer">
        <p class="mb-0">Â© 2025 Blogify | All Rights Reserved.</p>
      
        <!-- Scroll to Top Button -->
        <button id="scrollToTop" class="btn btn-sm rounded-circle">
          <i class="bi bi-arrow-up"></i>
        </button>
    </footer>

    <script>
        // Scroll to Top Button Logic
        const scrollToTopBtn = document.getElementById("scrollToTop");
        window.addEventListener("scroll", () => {
            scrollToTopBtn.style.display = window.scrollY > 400 ? "block" : "none";
        });
        scrollToTopBtn.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });

        // Apply theme when page loads
        function applyTheme(theme) {
            document.documentElement.setAttribute("data-theme", theme);
        }
        applyTheme(localStorage.getItem("theme") || "light");

        // Listen for theme change event from navbar
        window.addEventListener("themeChange", (event) => {
            applyTheme(event.detail.theme);
        });
    </script>
    <script> // Scroll to Top Button
        document.addEventListener("DOMContentLoaded", () => {
            const scrollToTopBtn = document.getElementById("scrollToTop");
    
            // Show/hide button on scroll
            window.addEventListener("scroll", () => {
                if (window.scrollY > 400) {
                    scrollToTopBtn.style.display = "block";
                } else {
                    scrollToTopBtn.style.display = "none";
                }
            });
    
            // Smooth scroll to top
            scrollToTopBtn.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
    
            // Ensure the button remains hidden initially
            scrollToTopBtn.style.display = "none";
        });
    </script>
</body>
</html>