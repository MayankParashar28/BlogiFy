            }


            .bio-text::after {
                content: '"';
                position: absolute;
                bottom: -30px;
                right: 10px;
                font-size: 40px;
                color: #007bff;
                opacity: 0.5;
            }

            .join-date {
                background: linear-gradient(45deg, #007bff, #00b4ff);
                -webkit-background-clip: text;
                background-clip: text;
                -webkit-text-fill-color: transparent;
                font-weight: 600;
            }

            .social-btn {
                display: inline-block;
                padding: 10px;
                border-radius: 50%;
