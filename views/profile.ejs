        <!-- Chart Script -->
        <script> // chart script
            document.addEventListener("DOMContentLoaded", function () {
                // Parse user data safely
                const userData = JSON.parse(document.getElementById("user-data").textContent);

                // Get elements
                const ctx = document.getElementById("dashboard-chart").getContext("2d");
                const chartTypeSelector = document.getElementById("chart-type-selector");
                const graphSelector = document.getElementById("graph-selector");

                // Chart instance variable
                let chartInstance;

                // Function to create or update chart
                function createChart(type, labels, data) {
                    if (chartInstance) {
                        chartInstance.destroy(); // Destroy previous chart
                    }

                    chartInstance = new Chart(ctx, {
                        type: type,
                        data: {
                            labels: labels,
                            datasets: [{
                                label: "User Activity",
                                data: data,
                                backgroundColor: ['#007bff', '#dc3545', '#ffc107', '#28a745', '#17a2b8'],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: { beginAtZero: true }
                            }
                        }
                    });
                }

                // Initialize chart with default values
                createChart("bar", userData.labels, userData.data);

                // Change chart type
                chartTypeSelector.addEventListener("change", function () {
                    createChart(this.value, userData.labels, userData.data);
                });

                // Change chart data based on dropdown selection
                graphSelector.addEventListener("change", function () {
                    let selectedMetric = this.value;
                    let updatedLabels = [];
                    let updatedData = [];

                    if (selectedMetric === "all") {
                        updatedLabels = userData.labels;
                        updatedData = userData.data;
                    } else {
                        let index = userData.labels.findIndex(label => label.toLowerCase() === selectedMetric);
                        if (index !== -1) {
                            updatedLabels = [userData.labels[index]];
                            updatedData = [userData.data[index]];
                        }
                    }

                    createChart(chartTypeSelector.value, updatedLabels, updatedData);
                });
            });
        </script>
